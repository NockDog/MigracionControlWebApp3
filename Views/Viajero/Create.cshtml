@model MigracionControl.Models.Viajero

<h2>Registrar Nuevo Viajero</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pasaporte"></label>
        <input asp-for="Pasaporte" class="form-control" />
        <span asp-validation-for="Pasaporte" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nacionalidad"></label>
        <input asp-for="Nacionalidad" class="form-control" />
        <span asp-validation-for="Nacionalidad" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>
